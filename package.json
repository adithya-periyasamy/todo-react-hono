{
  "name": "Code",
  "scripts": {
    "server": "bun run --hot server/index.ts",
    "client": "cd client && bun run dev",
    "dev": "concurrently \"bun run server\" \"bun run client\"",
    "db:up": "docker-compose up -d",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:push": "drizzle-kit push",
    "db:seed": "bun run ./scripts/seed-local-db-script.ts"
  },
  "dependencies": {
    "better-auth": "^1.3.25",
    "dotenv": "^17.2.2",
    "drizzle-orm": "^0.44.5",
    "drizzle-seed": "^0.3.1",
    "hono": "^4.9.8",
    "lucide-react": "^0.544.0",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/pg": "^8.15.5",
    "concurrency": "^0.1.4",
    "concurrently": "^9.2.1",
    "daisyui": "^5.1.26",
    "drizzle-kit": "^0.31.4",
    "open-cli": "^8.0.0"
  }
}
